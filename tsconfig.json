{
	"compilerOptions": {
		"outDir": "build",
		"allowJs": true,
		"target": "es5",
		"jsx": "react-jsx",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"noImplicitAny": false,
	},
	"include": [
		"src/**/*",
		// "./client/**/*"
	],
	"exclude": [
		"node_modules"
	],
}